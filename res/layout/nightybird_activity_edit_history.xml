<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
    <TextView
	 	android:id="@+id/editHistory_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="History Edit" />
    
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
			    android:id="@+id/dateTextView"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Threshold: " />
            <EditText
            	android:id="@+id/dateEditText"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:inputType="date"
            	android:text="4/1/2014"
            	android:focusable="false">
            	<requestFocus />
            </EditText>
        </TableRow>
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
			    android:id="@+id/sleepTime_TextView"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Sleep Time: " />
            <EditText
            	android:id="@+id/sleepTimeEditText"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:inputType="time"
            	android:text="11:30 pm">
            	<requestFocus />
            </EditText>
        </TableRow>
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
			    android:id="@+id/wakeupTime_TextView"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Wakeup Time: " />
            <EditText
            	android:id="@+id/wakeupTimeEditText"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:inputType="time"
            	android:text="6:30 am">
            	<requestFocus />
            </EditText>
        </TableRow>
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
			    android:id="@+id/sleepPeriod_TextView"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Wakeup Time: " />
            <EditText
            	android:id="@+id/sleepPeriodEditText"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:inputType="number"
            	android:text=" 7 "
            	android:focusable="false">
            	<requestFocus />
            </EditText>
            <TextView
			    android:id="@+id/sleepTimeUnit"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="hours" />
        </TableRow>
        
        
			
        
    </TableLayout>


</LinearLayout>
